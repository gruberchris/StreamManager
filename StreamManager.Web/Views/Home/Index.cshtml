@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Stream Manager</h1>
    <p class="lead">Welcome to the Kafka Stream Management Platform</p>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Interactive Query Tool</h5>
                <p class="card-text">Execute and stream real-time queries for rapid prototyping and debugging.</p>
                <a href="@Url.Action("Index", "Query")" class="btn btn-primary">Go to Query Tool</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Stream Management</h5>
                <p class="card-text">Create, deploy, and manage persistent streams and ETL jobs.</p>
                <a href="@Url.Action("Index", "Streams")" class="btn btn-success">Manage Streams</a>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <h3>Quick Start Guide</h3>
    <ul>
        <li>Use the <strong>Query Tool</strong> to prototype and test your queries</li>
        <li>Create <strong>Persistent Streams</strong> from your working queries</li>
        <li><strong>Deploy</strong> streams to start processing data</li>
        <li>Monitor and <strong>Preview</strong> your stream outputs</li>
    </ul>
</div>